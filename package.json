{
  "name": "@taml/cli",
  "version": "1.0.1",
  "description": "CLI tool to convert ANSI escape sequences to TAML (Terminal ANSI Markup Language) tags",
  "keywords": [
    "ansi",
    "cli",
    "terminal",
    "colors",
    "converter",
    "escape-sequences",
    "taml",
    "terminal-ansi-markup-language",
    "markup"
  ],
  "homepage": "https://github.com/suin/taml-cli#readme",
  "bugs": {
    "url": "https://github.com/suin/taml-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/suin/taml-cli.git"
  },
  "license": "MIT",
  "author": "suin",
  "type": "module",
  "bin": {
    "taml": "./js/index.js"
  },
  "files": [
    "js/**/*",
    "ts/**/*",
    "!ts/**/*.test.*",
    "!ts/**/*.spec.*",
    "!ts/**/__tests__/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf js *.tsbuildinfo",
    "test": "bun test"
  },
  "dependencies": {
    "@taml/encoder": "^1.0.0"
  },
  "devDependencies": {
    "@tsconfig/bun": "latest",
    "@tsconfig/node22": "latest",
    "@tsconfig/strictest": "latest",
    "@types/bun": "latest",
    "typescript": "latest"
  }
}
